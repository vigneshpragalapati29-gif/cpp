#include<iostream> 
using namespace std; 
template <class T> 
class calculator { 
private: 
 T num1,num2; 
public: 
 calculator(T n1, T n2) 
 {
 num1 = n1; 
num2 = n2; 
  } 
              T add(){ return num1 + num2;} 
  T subtract(){ return num1-num2;} 
  T multiply(){ return num1*num2;} 
  T divide(){ 
   if(num2 != 0) 
   return num1 / num2; 
   else{ 
    cout<<"error!division by zero."<<endl; 
   return 0; 
           } 
                           }    
};
num1 = n1; 
num2 = n2; 
  } 
              T add(){ return num1 + num2;} 
  T subtract(){ return num1-num2;} 
  T multiply(){ return num1*num2;} 
  T divide(){ 
   if(num2 != 0) 
   return num1 / num2; 
   else{ 
    cout<<"error!division by zero."<<endl; 
   return 0; 
           } 
                           }    
};
